<!DOCTYPE html>
<html>
  <head>
    <title>RecordStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-expand-lg navbar-light bg-secondary">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Shop', '/products' %></li>
        <li><%= item_total %> Items in Cart<li>
        <% if current_user %>
          <li><%= link_to('Edit User', edit_user_registration_path) %></li>
        <% end %>

        <% if current_user %>
          <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
        <% else %>
          <li><%= link_to('Login', new_user_session_path) %></li>
          <li><%= link_to('Register', new_user_registration_path) %></li>
        <% end %>
      </ul>
    </div>

    <div>
      <%= flash[:notice] %>
    </div>
    <div>
      <%= flash[:alert] %>
    </div>
    <div class='container' id="pad">
      <%= yield %>
    </div>
  </body>
</html>
