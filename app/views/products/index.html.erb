<h1>Spin Again Portland</h1>
<br>
<div class="record">
  <%= image_tag('record.jpg', height: 500) %>
</div>
<br>
<h3><%= link_to "Add a New Product", new_product_path %></h3>

<h1>Our Records</h1>
<br>
<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-6">
    <%= image_tag('joy.jpg', :width =>'150') %>
    <li><%= link_to product.name, product_path(product), remote: true %></li>
    <li><%= product.title %></li>
      <div class="product_show">
        <%= number_to_currency product.price %> | <%= product.description %>
    <%= form_for @order_item, remote: true do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to cart" %>
      <% end %>
      </div>
      <br>
      <br>
    </div>
  <% end %>
</div>
